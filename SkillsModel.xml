                <References>
                    <Reference IsInverse="false">
                        <ReferenceType>OpcUa:FromState</ReferenceType>
                        <TargetId>SKILLS:SkillStateMachineType_Ready</TargetId>
                    </Reference>
                    <Reference IsInverse="false">
